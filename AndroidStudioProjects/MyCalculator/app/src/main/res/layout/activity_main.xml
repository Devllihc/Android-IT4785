<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <!-- Hiển thị kết quả -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#D7D7D7"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="#000"
        android:textSize="48sp" />

    <!-- Bố cục bàn phím máy tính -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="4"
        android:padding="8dp"
        android:rowCount="5">

        <!-- Hàng 1 -->
        <Button android:id="@+id/btnClearEntry" style="@style/CalcButton" android:text="CE" />
        <Button android:id="@+id/btnClear" style="@style/CalcButton" android:text="C" />
        <Button android:id="@+id/btnBackspace" style="@style/CalcButton" android:text="BS" />
        <Button android:id="@+id/btnDivide" style="@style/CalcButton" android:text="/" />

        <!-- Hàng 2 -->
        <Button android:id="@+id/btn7" style="@style/CalcButton" android:text="7" />
        <Button android:id="@+id/btn8" style="@style/CalcButton" android:text="8" />
        <Button android:id="@+id/btn9" style="@style/CalcButton" android:text="9" />
        <Button android:id="@+id/btnMultiply" style="@style/CalcButton" android:text="x" />

        <!-- Hàng 3 -->
        <Button android:id="@+id/btn4" style="@style/CalcButton" android:text="4" />
        <Button android:id="@+id/btn5" style="@style/CalcButton" android:text="5" />
        <Button android:id="@+id/btn6" style="@style/CalcButton" android:text="6" />
        <Button android:id="@+id/btnSubtract" style="@style/CalcButton" android:text="-" />

        <!-- Hàng 4 -->
        <Button android:id="@+id/btn1" style="@style/CalcButton" android:text="1" />
        <Button android:id="@+id/btn2" style="@style/CalcButton" android:text="2" />
        <Button android:id="@+id/btn3" style="@style/CalcButton" android:text="3" />
        <Button android:id="@+id/btnAdd" style="@style/CalcButton" android:text="+" />

        <!-- Hàng 5 -->
        <Button android:id="@+id/btnPlusMinus" style="@style/CalcButton" android:text="+/-" />
        <Button android:id="@+id/btn0" style="@style/CalcButton" android:text="0" />
        <Button android:id="@+id/btnDot" style="@style/CalcButton" android:text="." />
        <Button
            android:id="@+id/btnEqual"
            style="@style/CalcButton"
            android:layout_columnSpan="1"
            android:background="#FF9800"
            android:text="=" />
    </GridLayout>

</LinearLayout>
